                                                                    </option>
                                                                    <option value="Sắp khởi chiếu">Sắp khởi chiếu
                                                                    </option>
                                                                    <option value="Đã chiếu xong">Đã chiếu xong</option>
                                                                </select>
                                                            </div>
                                                            <div class="ad-phim">
                                                                <label class="label-chitiet" for="">Chi tiết</label>
                                                                <textarea class="input-sua-area detail" cols="20"
                                                                    rows="10" name="detail"></textarea>
                                                            </div>
                                                            <div class="ad-phim">
                                                                <label class="label-chitiet" for="">Trailer</label>
                                                                <input class="input-sua trailer" type="url"
                                                                    name="trailer">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer footer-add">
                                                        <div class="footer-add-btn">
                                                            <button type="button"
                                                            class="btn btn-secondary close-footer close-CL">Đóng</button>
                                                        <button class="btn btn-common btn-warning close-AC" type="submit">Thêm</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                </th>
                            </tr>
                        </thead>
                        <tbody id="bodyAdd">
                            <% films.forEach(function(film){ %>
                                <tr class="<%= film.slug %>">
                                    <th scope="row" style="width: 15%">
                                        <img class="poster-admin-film avt" src="<%=film.photo%>" alt="">
                                    </th>
                                    <td style="width: 20%;">
                                        <div class="nameenedit">
                                            <%=film.nameEN%>
                                        </div>
                                        <div class="namevnedit">
                                            <%=film.nameVN%>
                                        </div>
                                    </td>
                                    <td class="directorsedit">
                                        <%= film.directors %>
                                    </td>
                                    <td class="premiereedit">
                                        <%= new Date(film.premiere).toLocaleDateString('en-GB') %>
                                    </td>
                                    <td class="categories">
                                        <%= film.idCat %>
                                    </td>
                                    <td>
                                        <div class="statusedit">
                                            <%= film.status%>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="btn-mode">
                                            <button type="button" class="btnEditFilm" value="<%= film.slug %>"><i
                                                    class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                                            <button type="button" class="btnDeleteFilm" value="<%= film.slug %>"><i
                                                    class="fa fa-times" aria-hidden="true"></i></button>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>


