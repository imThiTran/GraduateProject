    <script>
        var imgavtadd = document.getElementsByClassName('imgavtadd')[0]
        function imgAvtAdd() {
            if (event.target.files.length > 0) {
                let src = URL.createObjectURL(event.target.files[0]);
                document.getElementsByClassName('imgtest')[0].value = src
                imgavtadd.src = src;
            }else{
                imgavtadd.src='../img/no_img.webp'
                document.getElementsByClassName('imgtest')[0].value = ''
            }
        }
        var imgbgadd = document.getElementsByClassName('imgbgadd')[0]
        function imgBgAdd() {
            if (event.target.files.length > 0) {
                let src = URL.createObjectURL(event.target.files[0]);
                imgbgadd.src = src;
            }else{
                imgbgadd.src='../img/no_img.webp'
            }
        }
        var imgavtedit = document.getElementsByClassName('imgavtedit')[0]
           
        function imgAvtEdit() {
            let avtedit = document.getElementsByClassName('avteditshow')[0].value     
            if (event.target.files.length > 0) {
                let src = URL.createObjectURL(event.target.files[0]);
                document.getElementsByClassName('imgavted')[0].value = src
                imgavtedit.src = src;
            }else{
                imgavtedit.src=avtedit
                document.getElementsByClassName('imgavted')[0].value = ''
            }
        }
        var imgbgedit = document.getElementsByClassName('imgbgedit')[0]
        
        function imgBgEdit() {
            let bgedit = document.getElementsByClassName('bgeditshow')[0].value
            if (event.target.files.length > 0) {
                let src = URL.createObjectURL(event.target.files[0]);
                imgbgedit.src = src;
            }else{
                imgbgedit.src=bgedit
            }
        }
    </script>

    

