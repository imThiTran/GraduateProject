<%- include ('../layouts/header')%>

    <body>
        <%- include ('../layouts/admin-sub-header')%>
            <div class="wrapper-index">
                <div class="ad-movie">
                    <div style="display: flex; justify-content: space-between;
                    flex-wrap: wrap;">
                        <div class="h5-detail">Quản lý phim</div>
