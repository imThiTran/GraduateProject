<%- include ('../layouts/header')%>

<body>

    <div class="">
        <div class="login-section">
            <div class=" side-img">
                <div class="poster-index login-poster">
                    <div id="owl-demo" class="owl-carousel owl-theme">
                        <%filmslide.forEach(function(film){%>
                            <a href="/movie/<%=film.slug%>"><img class="poster-slide login-slide" src="<%=film.photo%>" alt="Owl Image"></a>                            
                        <% }) %>
                    </div>
                </div>
            </div>
            <div class="col-5 side-login">
                <div class="login-form">
                    <a href="/"><img src="/img/logo.gif" alt="logo"></a>
                    <h2 class="login-h1">Quên mật khẩu?</h2>
                    <form action="/auth/forget" method="post" class="form-signin">
                        <div class="login-input">
                            <%  if (typeof mes!="undefined"){%>
                                <div class="alert alert-danger error-alert" role="alert"><%=mes%></div>
                            <%} %>                            
                            <i class="fa-solid fa-circle-user"></i>
                            <input type="email" name="email" placeholder="Email" class="form-control email-input" id="exampleInputEmail1"
                                aria-describedby="emailHelp">
                                <span class="error">thông báo lỗi</span>
                        </div>
                        <button type="submit" class="btn-login">
                            Gửi
                        </button>
                        <i><a href="/auth/login">Quay lại trang Đăng nhập!</a></i>
                        <input type="hidden" class="url" name="url" />
                    </form>
                </div>
            </div>
        </div>
    </div>



    <script src="/js/jquery.min.js"></script>
    <script src="/js/popper.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/owl.carousel.js"></script>
    <link rel="stylesheet" href="/css/owl.carousel.css">
    <link rel="stylesheet" href="/css/owl.theme.css">

    <script>
         $('.url').val(window.location.protocol+"//"+window.location.host)
        $("#owl-demo").owlCarousel({
            animateOut: 'fadeOut',
            dots: false,
            loop: true,
            autoplay: true,
            autoplayTimeout: 4000,
            items: 1,
            itemsDesktop: [1199, 3],
            itemsDesktopSmall: [979, 3]

        });

    </script>

</body>
<!-- <%- include ('../layouts/footer') %> -->
</html>